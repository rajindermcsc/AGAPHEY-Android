<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/llt_six_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/rlt_six_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_six_month_book"
            android:layout_marginTop="-10dp"
            android:background="@drawable/rect_blue_border"
            android:paddingTop="10dp">

            <com.obs.CustomTextView
                android:id="@+id/tv_six_month"
                style="@style/proximanova_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/blue1"
                android:textSize="20sp" />

            <com.obs.CustomTextView
                android:id="@+id/tv_per_six_month"
                style="@style/proximanova_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_six_month"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Month"
                android:textColor="@color/blue1"
                android:textSize="16sp" />


            <com.obs.CustomTextView
                android:id="@+id/tv_six_month_price"
                style="@style/proximanova_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_per_six_month"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="$ 14.00/month"
                android:layout_marginBottom="5dp"
                android:textColor="@color/blue1"
                android:textSize="18sp" />

            <com.obs.CustomTextView
                android:id="@+id/tv_six_total_price"
                style="@style/proximanova_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_six_month_price"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Total: $155"
                android:layout_marginBottom="5dp"
                android:textColor="@color/blue1"
                android:textSize="18sp" />


        </RelativeLayout>

        <com.obs.CustomTextView
            android:id="@+id/tv_six_month_book"
            style="@style/proximanova_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/oval_blue_btn"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/most_popular"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


    <com.obs.CustomTextView
        android:visibility="visible"
        android:id="@+id/tv_payment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abc"
        android:textColor="@color/black"
        android:textSize="16sp">

    </com.obs.CustomTextView>

    <com.obs.CustomTextView
        android:visibility="visible"
        android:id="@+id/tv_payment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="abc"
        android:textColor="@color/black">

    </com.obs.CustomTextView>

    <com.obs.CustomTextView
        android:visibility="visible"
        android:id="@+id/tv_payment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="abc"
        android:textColor="@color/black">

    </com.obs.CustomTextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>