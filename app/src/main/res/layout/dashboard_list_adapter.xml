<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="100dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person">

        </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <com.obs.CustomTextView
                    android:id="@+id/text_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Shubham Garg"

                    android:textColor="@color/black"
                    android:textSize="18dp">

                </com.obs.CustomTextView>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">


                <com.obs.CustomTextView
                    android:id="@+id/text_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27"
                    android:textColor="@color/black"
                    android:textSize="15sp">

                </com.obs.CustomTextView>

                <com.obs.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=", "
                    android:textColor="@color/black"
                    android:textSize="15sp">

                </com.obs.CustomTextView>

                <com.obs.CustomTextView
                    android:id="@+id/text_locations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:textColor="@color/black"
                    android:textSize="15sp">

                </com.obs.CustomTextView>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/accept"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_accept_pink"
                    android:gravity="center"
                    android:textSize="15sp">

                </ImageView>

                <ImageView
                    android:layout_toRightOf="@+id/accept"
                    android:id="@+id/reject"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_reject"
                    android:gravity="center">

                </ImageView>

                <ImageView
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/reject"
                    android:id="@+id/message"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_send_msg"
                    android:gravity="center">

                </ImageView>

            </RelativeLayout>


        </LinearLayout>

</androidx.cardview.widget.CardView>