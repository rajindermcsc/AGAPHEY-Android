<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/llt_login_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.obs.CustomTextView
                    style="@style/proximanova_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <com.obs.CustomTextView
                    style="@style/proximanova_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center_vertical"
                    android:text="Please answer all the questions to continue."
                    android:textColor="@color/white"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.obs.CustomTextView
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="This app is for single, spirit-filled Christian revivalists (laid down lovers of Jesus). Does this statement apply to you? Please explain.">

                    </com.obs.CustomTextView>

                    <com.obs.CustomEditText
                        android:id="@+id/edt_ministry_school"
                        style="@style/proximanova_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingBottom="18dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@drawable/cursorcolor"
                        android:textSize="15sp"
                        android:theme="@style/EditTextTheme"
                        android:windowSoftInputMode="stateVisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <com.obs.CustomTextView
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"

                        android:textColor="@color/white"
                        android:text="Have you ever attended a school of ministry or served in a local church? Please explain.">

                    </com.obs.CustomTextView>

                    <com.obs.CustomEditText
                        android:id="@+id/edt_rpg"
                        style="@style/proximanova_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingBottom="18dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@drawable/cursorcolor"
                        android:textSize="15sp"
                        android:theme="@style/EditTextTheme"
                        android:windowSoftInputMode="stateVisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <com.obs.CustomTextView
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="What leadership/covering are you currently submitted to? This includes leaders, Pastors etc.">

                    </com.obs.CustomTextView>

                    <com.obs.CustomEditText
                        android:id="@+id/edt_lifestyle"
                        style="@style/proximanova_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingBottom="18dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@drawable/cursorcolor"
                        android:textSize="15sp"
                        android:theme="@style/EditTextTheme"
                        android:windowSoftInputMode="stateVisible" />
                </LinearLayout>



                <com.obs.CustomTextView
                    android:id="@+id/tv_signup"
                    style="@style/proximanova_regular"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/oval_btn_gray_border"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:padding="15dp"
                    android:drawableRight="@drawable/arrownextright"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
